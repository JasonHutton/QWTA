// ========================================================================
// Entity DEFS
//

invItemDef inventory/weapons/spikes/gdf {
	type								"weapon"
	slot								"melee"
	name								"game/weapons/spikes"

	data {
		"inherit1"						"inventory/weapons/spikes"
		"stat_name"						"knife"
	}
}

